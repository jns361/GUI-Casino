<UserControl x:Class="Casino.RoulettePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="650" Width="570">
    <!--:DesignHeight="650" d:DesignWidth="570"-->
    <Viewbox>
        <Grid x:Name="RouletteGrid" Cursor="" Width="580" Background="#FFF9F6EE">
            <Grid.RowDefinitions>
                <RowDefinition Height="650*"/>
                <RowDefinition Height="47*"/>
            </Grid.RowDefinitions>

            <Image x:Name="wallpaper"
                   Source="pack://application:,,,/Visuals/background.png"
                   Opacity="0" Margin="-270,-248,-270,-217" Grid.RowSpan="2"/>

            <Border x:Name="BlackHover"
                    Background="Turquoise" Margin="383,404,153,179"
                    Visibility="Hidden"/>

            <Border x:Name="ColorBlack"
                    Background="Black" Margin="385,406,155,181"/>

            <Border x:Name="GreenHover" 
                    Background="Turquoise" Margin="268,404,268,179"
                    Visibility="Hidden"/>

            <Border x:Name="ColorGreen"
                    Background="Green" Margin="270,406,270,181"/>

            <Border x:Name="RedHover"
                    Background="Turquoise" Margin="153,405,383,178"
                    Visibility="Hidden"/>

            <Border x:Name="ColorRed"
                    Background="DarkRed" Margin="155,407,385,180"/>

            <Image x:Name="chipAnimation" 
                    Width="49" Height="47" 
                    Source="pack://application:,,,/Casino;component/Visuals/chip.gif" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,18,158,0"
                    />

            <Image x:Name="rouletteWheel"
                   Width="150" Height="150"
                   Source="pack://application:,,,/Visuals/roulette.png"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,145,0,0"/>

            <TextBox x:Name="chipDisplay" 
                     Margin="0,30,102,0" 
                     TextWrapping="Wrap"
                     Text="1000"
                     HorizontalAlignment="Right" VerticalAlignment="Top" 
                     Width="62"
                     FontSize="17"
                     BorderThickness="0"
                     IsReadOnly="True" Focusable="False" Background="#FFF9F6EE"
                     RenderTransformOrigin="0.527,0.293" Height="23" TextChanged="chipDisplay_TextChanged"/>

            <Canvas VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="270" Margin="0,379,0,0">

                <RadioButton x:Name="colorRed"
                             Content="Red" Canvas.Top="28"
                             Checked="ColorRed_Checked" IsTabStop="False" 
                             MouseEnter="ColorHover" MouseLeave="ColorNoHover"
                             Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Top"
                             Background="Transparent" BorderBrush="Transparent" OpacityMask="Transparent"/>
                <RadioButton x:Name="colorGreen" 
                             Content="" 
                             Canvas.Left="115" Canvas.Top="27"
                             Checked="ColorGreen_Checked" IsTabStop="False"
                             MouseEnter="ColorHover" MouseLeave="ColorNoHover"
                             Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Top"
                             Background="Transparent" BorderBrush="Transparent" OpacityMask="Transparent"/>
                <RadioButton x:Name="colorBlack"
                             Content="" 
                             Canvas.Left="230" Canvas.Top="27"
                             Checked="ColorBlack_Checked" IsTabStop="False" 
                             MouseEnter="ColorHover" MouseLeave="ColorNoHover"
                             Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Top"
                             Background="Transparent" BorderBrush="Transparent" OpacityMask="Transparent"/>
            </Canvas>
            <TextBox x:Name="numberChoiceBox" 
                     PreviewTextInput="CheckForLetters"
                     HorizontalAlignment="Center" 
                     Margin="0,508,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120" 
                     TextChanged="TextBox_TextChanged" 
                     SelectionOpacity="0.2" 
                     AllowDrop="False" 
                     Background="#FFCAC6C6" Height="18"/>

            <Button x:Name="submitButton" 
                    Content="Submit" 
                    HorizontalAlignment="Center" 
                    Margin="0,558,0,0" 
                    VerticalAlignment="Top" 
                    Click="Button_Click" IsTabStop="False" Height="20" Width="42" />

            <Button x:Name="backHome"
                    Content="Homemenu"
                    HorizontalAlignment="Left" 
                    Margin="109,0,0,577"
                    Click="HomeMenu_Click" Width="66" Height="20" VerticalAlignment="Bottom"/>

            <CheckBox x:Name="NumberBetting" Content="Bet on Number" 
                      HorizontalAlignment="Center" 
                      Margin="0,488,0,0" 
                      VerticalAlignment="Top" 
                      Checked="NumberBetting_Checked" 
                      Unchecked="NumberBetting_Unchecked" IsTabStop="False" Height="15" Width="102" />

            <TextBlock x:Name="choiceAnnounce"
                       HorizontalAlignment="Center" 
                       Margin="0,73,0,0" 
                       TextWrapping="Wrap" 
                       Text="Enter your desired stake in the beige box!" 
                       FontSize="18"
                       VerticalAlignment="Top"
                       TextAlignment="Center"
                       Width="362" Height="24"/>

            <TextBox x:Name="InputCorrector"
                     HorizontalAlignment="Center" 
                     Margin="0,601,0,10" 
                     TextWrapping="Wrap" 
                     Text="" 
                     TextAlignment="Center" 
                     Width="226"
                     FontFamily="72 Black"  
                     Foreground="#FFB90000" 
                     AllowDrop="False" 
                     Focusable="False" 
                     Cursor="No"  Background="#FFF9F6EE"
                     BorderThickness="0"/>

            <TextBox x:Name="BetAmountInput" 
                     Text="BET" TextAlignment="Center"
                     PreviewMouseLeftButtonDown="BetAmountBox_Clicked"
                     PreviewTextInput="CheckForLetters"
                     HorizontalAlignment="Center" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="50" 
                     TextChanged="TextBoxChips_TextChanged" 
                     SelectionOpacity="0.2" 
                     AllowDrop="False" 
                     Background="Beige" 
                     Cursor="Hand"
                     Margin="0,333,0,0" IsTabStop="False" Height="18"/>

            <Button Content="RESET"  ClipToBounds="True"
                    HorizontalAlignment="Left" 
                    Margin="30,606,0,0" 
                    VerticalAlignment="Top" 
                    Click="ResetChips" 
                    Width="36" 
                    Height="20" IsTabStop="False" />

            <Image x:Name="boxAroundChips"
                   Width="96" Height="92"
                   Source="Visuals/oval.png" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,0,109,0" RenderTransformOrigin="-0.878,0.472"/>

            <Border Margin="381,24,111,490"
                    Background="Transparent"
                    CornerRadius="20"
                    Cursor="No"/>

            <Border x:Name="UserChoiceDisplay"
                    BorderThickness="3" BorderBrush="Black"
                    Background="#7393B3" Margin="100,210,405,327"/>

            <Border x:Name="ResultDisplay" 
                    BorderThickness="3" BorderBrush="Black"
                    Background="#7393B3" Margin="405,210,100,327"/>

            <Border x:Name="UserDisplayRed"
                    Background="DarkRed"
                    Margin="105,215,410,332"
                    Visibility="Visible"
                    Opacity="0"/>

            <Border x:Name="UserDisplayGreen"
                    Background="Green"
                    Margin="105,215,410,332"
                    Visibility="Visible"
                    Opacity="0"/>

            <Border x:Name="UserDisplayBlack"
                    Background="Black"
                    Margin="105,215,410,332"
                    Visibility="Visible"
                    Opacity="0"/>

            <Border x:Name="ResultDisplayRed"
                    Background="DarkRed"
                    Margin="410,215,105,332"
                    Visibility="Hidden"/>

            <Border x:Name="ResultDisplayGreen"
                    Background="Green"
                    Margin="410,215,105,332"
                    Visibility="Hidden"/>

            <Border x:Name="ResultDisplayBlack"
                    Background="Black"
                    Margin="410,215,105,332"
                    Visibility="Hidden"/>
            <TextBlock x:Name="textYour"
                           TextAlignment="Center" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap" 
                           Margin="84,218,486,335"
                           Text="YOUR"
                           RenderTransformOrigin="0.5, 0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <TextBlock x:Name="textBet"
                           TextAlignment="Center" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap" 
                           Margin="180,226,390,344"
                           Text="BET"
                           RenderTransformOrigin="0.5, 0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <TextBlock x:Name="textRolled"
                           TextAlignment="Center" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap" 
                           Margin="389,210,181,328"
                           Text="ROLLED"
                           RenderTransformOrigin="0.5, 0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <TextBlock x:Name="textResult"
                           TextAlignment="Center" 
                           FontSize="11" 
                           FontWeight="Bold" 
                           TextWrapping="Wrap" 
                           Margin="485,210,85,328"
                           Text="RESULT"
                           RenderTransformOrigin="0.5, 0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TextBlock.RenderTransform>
            </TextBlock>



        </Grid>
    </Viewbox>
</UserControl>
