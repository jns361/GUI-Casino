<UserControl x:Class="Casino.PokerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casino"
             mc:Ignorable="d" 
             Height="650" Width="570">

    <Viewbox>
        <Grid x:Name="PokerGrid" Height="650" Width="570" 
              Background="#FFF9F6EE">

            <Image x:Name="chipAnimation" 
                   Width="49" Height="47" 
                   Source="pack://application:,,,/Casino;component/Visuals/chip.gif" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,18,158,0"/>

            <TextBox x:Name="chipDisplay" 
                     Margin="0,30,102,0" 
                     TextWrapping="Wrap"
                     Text="1000"
                     HorizontalAlignment="Right" VerticalAlignment="Top" 
                     Width="62"
                     FontSize="17"
                     BorderThickness="0"
                     IsReadOnly="True" Focusable="False" Background="#FFF9F6EE"
                     RenderTransformOrigin="0.527,0.293" Height="23"/>

            <Image x:Name="boxAroundChips"
                   Width="96" Height="92"
                   Source="Visuals/oval.png" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,0,109,0" RenderTransformOrigin="-0.878,0.472"/>

            <Button x:Name="backHome"
                    Content="Homemenu"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Margin="109,30,0,0"
                    Click="HomeMenu_Click" Height="20" Width="66"/>

            <Button Content="RESET"  ClipToBounds="True"
                    HorizontalAlignment="Left" 
                    Margin="30,606,0,0" 
                    VerticalAlignment="Top" 
                    Click="ResetGame" 
                    Width="36" 
                    Height="20" IsTabStop="False" />

            <Button x:Name="NewDealerCard" Content="Dealer Draw" 
                    Height="25" Width="80" Click="DrawDealerCard" 
                    Margin="245,449,245,161" FontFamily="Baskerville Old Face"
                    BorderThickness="0" Background="Black" Opacity="0.85"
                    Foreground="Ivory"/>
            <Button x:Name="FirstDealerCards" Content="Dealer Draw" 
                    Height="25" Width="80"
                    Click="Draw3DealerCards" Margin="245,449,245,161" 
                    IsEnabled="False" BorderThickness="0" Background="Black"
                    Foreground="Ivory" FontFamily="Baskerville Old Face" Opacity="0.85"/>
            <Button x:Name="PlayerDraw" Content="PlayerDraw"
                    Width="80" Height="25"
                    Click="Button_Click" Margin="0,486,0,138"
                    FontFamily="Baskerville Old Face" BorderThickness="0"
                    Background="Black" Opacity="0.85" Foreground="Ivory"/>


            <TextBlock x:Name="TestText" Margin="216,108,216,401" FontSize="5"/>

            <StackPanel x:Name="CardPanel" Visibility ="Visible"
                        Orientation="Horizontal" Margin="142,282,133,277"/>

            <StackPanel x:Name="PlayerCardPanel" Visibility="Visible" 
                        Orientation="Horizontal" Width="200" Margin="228,526,142,0"/>

            <Button x:Name="NewRound" Content="New Round"
                    HorizontalAlignment="Center" Margin="0,411,0,0" 
                    VerticalAlignment="Top" Click="StartNewRound"
                    Visibility="Collapsed"/>

            <TextBox x:Name="ChipInput" Text="Bet"
                     HorizontalAlignment="Left" Margin="452,461,0,0" 
                     TextAlignment="Center" VerticalAlignment="Top" 
                     Width="44" Height="16" FontFamily="Baskerville Old Face"
                     PreviewMouseLeftButtonDown="EmptyBetText"
                     Cursor="Hand" IsTabStop="False"
                     PreviewTextInput="CheckForLetters"/>

            <Button x:Name="RaiseBet" Content="Raise" 
                    HorizontalAlignment="Left" Margin="451,488,0,0" 
                    VerticalAlignment="Top" 
                    Height="20" Width="46"
                    Click="StartCalculation"/>

            <TextBox x:Name="InputCorrector" HorizontalAlignment="Left" 
                     Margin="415,396,0,0" TextWrapping="Wrap" 
                     VerticalAlignment="Top" Width="122" 
                     TextAlignment="Center" FontFamily="72 Black"
                     Foreground="#FFB90000" AllowDrop="False" 
                     Focusable="False" Background="#FFF9F6EE" 
                     BorderThickness="0"/>
            
        </Grid>
    </Viewbox>
</UserControl>
