<Window x:Class="RouletteNew.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RouletteNew"
        mc:Ignorable="d"
        Title="SplashScreen" Height="650" Width="570"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to the Casino!" 
                       FontSize="24" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <Button Content="Roulette"
                    Width="200" Height="25"
                    Click="RouletteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
