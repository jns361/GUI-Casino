<UserControl x:Class="Casino.PokerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casino"
             mc:Ignorable="d" 
             Height="650" Width="570">
    
    <Viewbox>
        <Grid x:Name="PokerGrid" Height="650" Width="570" 
              Background="#FFF9F6EE">

            <Image x:Name="chipAnimation" 
                   Width="49" Height="47" 
                   Source="pack://application:,,,/Casino;component/Visuals/chip.gif" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,18,158,0"/>
            
            <TextBox x:Name="chipDisplay" 
                     Margin="0,30,102,0" 
                     TextWrapping="Wrap"
                     Text="1000"
                     HorizontalAlignment="Right" VerticalAlignment="Top" 
                     Width="62"
                     FontSize="17"
                     BorderThickness="0"
                     IsReadOnly="True" Focusable="False" Background="#FFF9F6EE"
                     RenderTransformOrigin="0.527,0.293" Height="23"/>

            <Image x:Name="boxAroundChips"
                   Width="96" Height="92"
                   Source="Visuals/oval.png" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,0,109,0" RenderTransformOrigin="-0.878,0.472"/>

            <Button x:Name="backHome"
                    Content="Homemenu"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Margin="109,30,0,0"
                    Click="HomeMenu_Click" Height="20" Width="66"/>

            <Button Content="RESET"  ClipToBounds="True"
                    HorizontalAlignment="Left" 
                    Margin="30,606,0,0" 
                    VerticalAlignment="Top" 
                    Click="ResetChips" 
                    Width="36" 
                    Height="20" IsTabStop="False" />
        </Grid>
    </Viewbox>    
</UserControl>
