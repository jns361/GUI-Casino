<Window x:Class="Roulette.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Roulette" 
        mc:Ignorable="d" 
        Title="Roulette" 
        Height="600" 
        Width="550"
        Loaded="Window_Loaded">
        
    <Grid>
        <TextBox x:Name="numberChoiceBox" 
                 PreviewTextInput="CheckForLetters"
                 HorizontalAlignment="Center" 
                 Margin="0,435,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="120" 
                 TextChanged="TextBox_TextChanged" 
                 SelectionOpacity="0.2" 
                 AllowDrop="False" 
                 Background="#FFCAC6C6"/>
        <Button x:Name="submitButton" 
                Content="Submit" 
                HorizontalAlignment="Center" 
                Margin="0,460,0,0" 
                VerticalAlignment="Top" 
                Click="Button_Click"/>
        <CheckBox Content="Bet on Number" 
                  HorizontalAlignment="Center" 
                  Margin="0,410,0,0" 
                  VerticalAlignment="Top" 
                  Checked="numberBetting_Checked" 
                  Unchecked="numberBetting_Unchecked"/>
        <RadioButton x:Name="colorRed"
                     Content="Red" 
                     HorizontalAlignment="Left" 
                     Margin="65,357,0,0" 
                     VerticalAlignment="Top" 
                     Checked="colorRed_Checked"/>
        <RadioButton x:Name="colorGreen" 
                     Content="Green" 
                     HorizontalAlignment="Center" 
                     Margin="0,357,0,0" 
                     VerticalAlignment="Top"
                     Checked="colorGreen_Checked"/>
        <RadioButton x:Name="colorBlack"
                     Content="Black" 
                     HorizontalAlignment="Left" 
                     Margin="405,357,0,0" 
                     VerticalAlignment="Top"
                     Checked="colorBlack_Checked"/>
        <TextBlock x:Name="choiceAnnounce"
                   HorizontalAlignment="Center" 
                   Margin="12,169,12,0" 
                   TextWrapping="Wrap" 
                   Text="Start playing by choosing your first bet down below!" 
                   FontSize="18"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="InputCorrector"
                 HorizontalAlignment="Center" 
                 Margin="0,501,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="120"
                 FontFamily="72 Black" 
                 FontSize="15" 
                 BorderBrush="White" 
                 Foreground="#FFB90000" 
                 AllowDrop="False" 
                 Focusable="False" 
                 Cursor="No" 
                 SelectionBrush="White"/>
    </Grid>
</Window>