<Window x:Class="Roulette.RouletteWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Roulette" 
        mc:Ignorable="d" 
        Title="Roulette" 
        Height="650" 
        Width="570"
        Icon="/Visuals/favicon(1).ico"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="#FFF9F6EE">
        <Viewbox>
            <Grid>

                <Image x:Name="chipAnimation" 
                       Width="49" Height="47" 
                       Source="pack://application:,,,/RouletteNew;component/Visuals/chip.gif" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,18,60,0"
                       />

                <Canvas VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="270" Margin="0,379,0,205">
                    <RadioButton x:Name="colorRed"
                                 Content="Red" 
                                 Canvas.Left="0" Canvas.Top="0"
                                 Checked="colorRed_Checked" IsTabStop="False" />
                    <RadioButton x:Name="colorGreen" 
                                 Content="Green" 
                                 Canvas.Left="110" Canvas.Top="0"
                                 Checked="colorGreen_Checked" IsTabStop="False"/>
                    <RadioButton x:Name="colorBlack"
                                 Content="Black" 
                                 Canvas.Left="220" Canvas.Top="0"
                                 Checked="colorBlack_Checked" IsTabStop="False" />
                </Canvas>

                <TextBox x:Name="numberChoiceBox" 
                         PreviewTextInput="CheckForLetters"
                         HorizontalAlignment="Center" 
                         Margin="0,439,0,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="120" 
                         TextChanged="TextBox_TextChanged" 
                         SelectionOpacity="0.2" 
                         AllowDrop="False" 
                         Background="#FFCAC6C6"/>

                <Button x:Name="submitButton" 
                        Content="Submit" 
                        HorizontalAlignment="Center" 
                        Margin="0,464,0,0" 
                        VerticalAlignment="Top" 
                        Click="Button_Click" IsTabStop="False" />

                <Button x:Name="backHome"
                        Content="Homemenu"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        Margin="12,30,0,0"
                        Click="HomeMenu_Click"
                        />

                <CheckBox Content="Bet on Number" 
                          HorizontalAlignment="Center" 
                          Margin="0,414,0,0" 
                          VerticalAlignment="Top" 
                          Checked="numberBetting_Checked" 
                          Unchecked="numberBetting_Unchecked" IsTabStop="False" />

                <TextBlock x:Name="choiceAnnounce"
                           HorizontalAlignment="Center" 
                           Margin="0,169,0,0" 
                           TextWrapping="Wrap" 
                           Text="Enter your desired stake in the beige box!" 
                           FontSize="18"
                           VerticalAlignment="Top"
                           TextAlignment="Center"
                           Width="361"/>

                <TextBox x:Name="InputCorrector"
                         HorizontalAlignment="Center" 
                         Margin="0,489,0,0" 
                         TextWrapping="Wrap" 
                         Text="" 
                         TextAlignment="Center"
                         VerticalAlignment="Top" 
                         Width="225"
                         FontFamily="72 Black" 
                         BorderBrush="White" 
                         Foreground="#FFB90000" 
                         AllowDrop="False" 
                         Focusable="False" 
                         Cursor="No" 
                         SelectionBrush="White"/>

                <TextBox x:Name="BetAmountInput" 
                         PreviewTextInput="CheckForLetters"
                         HorizontalAlignment="Center" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="50" 
                         TextChanged="TextBoxChips_TextChanged" 
                         SelectionOpacity="0.2" 
                         AllowDrop="False" 
                         Background="Beige" 
                         Cursor="Hand"
                         Margin="0,341,0,0" IsTabStop="False"/>
                <Image x:Name="boxAroundChips"
                       Width="96" Height="91"
                       Source="Visuals/oval.png" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,0,12,0"/>
                <Button Content="RESET" 
                        HorizontalAlignment="Left" 
                        Margin="-98,605,0,0" 
                        VerticalAlignment="Top" 
                        Click="ResetChips" 
                        Width="36" 
                        Height="21" IsTabStop="False" />
                <TextBox x:Name="chipDisplay" 
                         Margin="0,30,5,0" 
                         TextWrapping="Wrap"
                         Text="1000"
                         HorizontalAlignment="Right" VerticalAlignment="Top" 
                         Width="62"
                         FontSize="17" 
                         Cursor="No"
                         BorderThickness="0"
                         IsReadOnly="True" Focusable="False">
                    <TextBox.Background>
                        <SolidColorBrush Color="#FFF9F6EE" />
                    </TextBox.Background>
                </TextBox>
            </Grid>
        </Viewbox>
    </Border>
</Window>